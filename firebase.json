{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/components/**", "destination": "/components/:splat" },
      { "source": "**",            "destination": "/index.html" }
    ]
  }
}
